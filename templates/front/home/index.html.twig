{% extends 'front/base.html.twig' %}

{% block title %}Steal{% endblock %}

{% block body %}

    {% include 'front/partial/topBackGround.html.twig' %}

    <div class="container">

        <div class="displayTitle">
            <h2>Les plus joués</h2>
            <div class="row">
                {% for game in gamesByTime %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        {% include 'front/partial/card.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="displayTitle">
            <h2>Les dernières sorties</h2>
            <div class="row">
                {% for game in gamesByLastRealese %}
                    <div class="col-xl-3 col-lg-4 mb-4">
                        {% include 'front/partial/card.html.twig' with { 'css': 'true' } %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="displayTitle">
            <h2>Derniers commentaires</h2>
            <div class="row">
                {% for comment in lastComment %}
                    <div class="col-lg-3 col-md-4">
                        {% include 'front/partial/commentCard.html.twig' with {
                            'comment': comment[0],
                            'username': comment['username'],
                            'gamename': comment['gamename'],
                        } %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="displayTitle">
            <h2>Les plus vendus</h2>
            <div class="row">
                {% for game in gamesByBestSeller %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        {% include 'front/partial/card.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="displayTitle">
            <h2>Quelques catégories</h2>
            <div class="row">
                {% for category in categories %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        {% include 'front/partial/Categorycard.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}
